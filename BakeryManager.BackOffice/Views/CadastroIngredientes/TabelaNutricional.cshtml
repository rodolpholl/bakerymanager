                    <tr>
                        <th>Componente</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Umidade)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Umidade) %
                        </td>
                    </tr>
                    
                    <tr rowspan="2" >
                        <td><label>Energia</label></td>
                        <td>
                            <table class"table table-striped">
                                <tr>
                                    <td>
                                        @Html.LabelFor(x => x.EnergiaKCAL)
                                    </td>
