@model BakeryManager.BackOffice.Models.Cadastros.Ingredientes.TabelaNutricionalModel
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Tabela Nutricional para o Ingreditente <strong>@(string.IsNullOrWhiteSpace(Model.Ingrediente.Nome) ? Model.Ingrediente.NomeTACO : Model.Ingrediente.Nome)</strong></h4>
        </div>
        <div class="modal-body">




            <table class="table table-striped">
                <caption>
                    <p>@Html.LabelFor(model => model.Ingrediente.CodigoTACO): @Html.DisplayFor(model => model.Ingrediente.CodigoTACO)</p>
                    @if (!string.IsNullOrWhiteSpace(Model.Ingrediente.Nome))
                    {
