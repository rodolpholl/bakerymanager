@model BakeryManager.BackOffice.Models.Cadastros.CadastroUsuarioModel
@using Kendo.Mvc.UI

<div class="row">
    <div class="col-lg-10">
        <form class="form-horizontal" role="form">

            <div class="form-group">
                @Html.LabelFor(x => x.Nome, new {@class = "col-sm-2 control-label" })
                <div class="col-sm-12">
                    @Html.EditorFor(x => x.Nome, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Login, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-12">
                    @Html.EditorFor(x => x.Nome, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-12">
                    @Html.EditorFor(x => x.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Telefone, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-12">
                    @Html.EditorFor(x => x.Telefone, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Perfil, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-12">
                    @(
                        Html.Kendo().DropDownListFor(x => x.Perfil).DataSource(x => x.Read("GetListaPerfil", "CadastroUsuarios"))
                        .DataTextField("Nome").DataValueField("IdPerfil").OptionLabel("Selecione...")
                        .HtmlAttributes(new { @class = "form-control" })
                    )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Ativo, new { @class = "col-sm-2 control-label" })
                <div class="col-lg-12">
                    @Html.EditorFor(x => x.Ativo, new { @class = "form-control" })
                </div>
            </div>

        </form>
    </div>
</div>
