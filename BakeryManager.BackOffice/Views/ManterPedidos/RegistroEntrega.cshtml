@using Kendo.Mvc.UI
@using BakeryManager.BackOffice.Models.Pedido
@model PedidoRegistroEntregaModel


    <div class="row">
        <div class="col-lg-10">
            <form role="form">
                @Html.HiddenFor(x => x.Pedido)

                <div class="form-group">

                    @Html.LabelFor(x => x.EventoEntrega, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        @(Html.Kendo().DropDownListFor(x => x.EventoEntrega).DataValueField("Value").DataTextField("Text")
                        .BindTo((IList<SelectListItem>)ViewData["ListaTipoEventoEntrega"]).HtmlAttributes(new {style = "width: 250px" })
                        )
                    </div>
                </div>

                <div class="form-group" id="divJustificativa">

                    @Html.LabelFor(x => x.Justificativa, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        @(Html.Kendo().EditorFor(x => x.Justificativa).Resizable(true))
                         
                    </div>
                </div>
            </form>

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-10">
            
            <button class="btn btn-primary" type="button" id="btnSalvar" onclick="RegistrarEntrega(@Model.Pedido.IdPedido)">Registrar Entrega</button>
        </div>
    </div>