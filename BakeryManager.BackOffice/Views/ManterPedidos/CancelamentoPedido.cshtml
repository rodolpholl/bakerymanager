@using Kendo.Mvc.UI
@model BakeryManager.BackOffice.Models.Pedido.PedidoCancelamentoModel



        <div class="row">
            <div class="col-lg-10">
                

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Motivo</label>
                        <div class="col-sm-10">
                            @(Html.Kendo().DropDownList().Name("TipoCancelamento").DataTextField("Text").DataValueField("Value")
                                .BindTo((IList<SelectListItem>)ViewData["ListaTipoCancelamento"]).HtmlAttributes(new { style = "width: 350px"})
                            )
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Sustentação do Cancelamento</label>
                        <div class="col-sm-8">
                            @Html.Kendo().EditorFor(x => x.TextoCancelamento).Resizable(true).HtmlAttributes(new { style = "width: 700px" })
                        </div>
                    </div>
                
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-10">
             
                <button class="btn btn-primary" type="button" id="btnSalvar" onclick="cancelarPedido(@Model.IdPedido)">Cancelar Pedido</button>
            </div>
        </div>

 

