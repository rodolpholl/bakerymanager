<script type="text/javascript">

    /*-------- Sripts para os pedidos no Status Abuardando Produção -----------*/


    function EnviarParaLinhadeProducao(IdPedido, NumeroPedido) {
        confirm("Deseja Realmente Enviar o Pedido <b>" + NumeroPedido + "</b>  para a Linha de Produção?", function () {
            $.ajax({
                url: '@Url.Action("EnviarParaLinhadeProducao", "ManterPedidos")',
                method: "POST",
                data: {
                    IdPedido: IdPedido
                },
                success: function (data) {
                    if (data.TipoMensagem == 1)
                        alert(data.Mensagem, null, 1)
                    else
                        window.location.href = "@Url.Action("Index", "Home")";


                }
            });
        }, 2)
    }

    $(function () {



        $.ajax({

            url: '@Url.Action("GetListaPedidosAguardandoProducao", "ManterPedidos")',
            success: function (data) {

                $("#aguardandoproducao").html(data);
                $('[data-toggle="tooltip"]').tooltip();


            }

        });

    });


    /*-----------------------------------------*/


</script>
